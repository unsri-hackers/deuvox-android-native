<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FDE54E">

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/deuvox_logo_black"
        android:layout_marginTop="25dp"
        android:layout_marginStart="24dp"/>

    <ImageView
        android:layout_width="411dp"
        android:layout_height="520dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginTop="256dp"
        android:background="@drawable/curved_header" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="39dp"
        android:layout_marginTop="18dp"
        android:src="@drawable/deuvox_amico" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="278dp"
        android:layout_marginTop="98dp"
        android:src="@drawable/deuvox_ellipse" />

    <TextView
        android:id="@+id/tv_register_hello"
        android:layout_width="wrap_content"
        android:layout_height="48dp"
        android:layout_marginStart="25dp"
        android:layout_marginTop="290dp"
        android:text="@string/register_hello"
        android:textAlignment="center"
        android:textColor="@color/black"
        android:textSize="32sp" />

    <TextView
        android:id="@+id/tv_register_account"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="25dp"
        android:text="@string/register_account"
        android:textAlignment="center"
        android:textColor="@color/black"
        android:textSize="16sp"
        android:layout_below="@id/tv_register_hello"/>

    <TextView
        android:id="@+id/tv_register_name_title"
        android:layout_width="wrap_content"
        android:layout_height="24dp"
        android:layout_marginStart="24dp"
        android:layout_marginTop="29dp"
        android:text="@string/name"
        android:textAlignment="center"
        android:textColor="@color/black"
        android:textSize="16sp"
        android:layout_below="@id/tv_register_account"/>
    
    <EditText
        android:id="@+id/register_name"
        android:layout_width="362dp"
        android:layout_height="42dp"
        android:layout_marginStart="25dp"
        android:paddingTop="11dp"
        android:paddingStart="16dp"
        tools:text="Julia Shakira P"
        android:textSize="14sp"
        android:textColor="#66000000"
        android:background="@drawable/register_border"
        android:layout_below="@id/tv_register_name_title"/>

    <TextView
        android:id="@+id/tv_register_email_title"
        android:layout_width="wrap_content"
        android:layout_height="24dp"
        android:layout_marginStart="24dp"
        android:layout_marginTop="8dp"
        android:text="@string/email_address"
        android:textAlignment="center"
        android:textColor="@color/black"
        android:textSize="16sp"
        android:layout_below="@id/register_name"/>

    <EditText
        android:id="@+id/register_email"
        android:layout_width="362dp"
        android:layout_height="42dp"
        android:layout_marginStart="25dp"
        android:paddingTop="11dp"
        android:paddingStart="16dp"
        tools:text="youremail@domain.com"
        android:textSize="14sp"
        android:textColor="#66000000"
        android:background="@drawable/register_border"
        android:layout_below="@id/tv_register_email_title"/>

    <TextView
        android:id="@+id/tv_register_password_title"
        android:layout_width="wrap_content"
        android:layout_height="24dp"
        android:layout_marginStart="24dp"
        android:layout_marginTop="8dp"
        android:text="@string/password"
        android:textAlignment="center"
        android:textColor="@color/black"
        android:textSize="16sp"
        android:layout_below="@id/register_email"/>

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/register_password_layout"
        android:layout_width="362dp"
        android:layout_height="42dp"
        android:layout_marginStart="25dp"
        android:layout_below="@id/tv_register_password_title"
        app:passwordToggleEnabled="true" >
        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/register_password"
            android:inputType="textPassword"
            android:layout_width="362dp"
            android:layout_height="42dp"
            android:paddingTop="11dp"
            android:paddingStart="16dp"
            tools:text="testingpassword"
            android:textSize="14sp"
            android:textColor="#66000000"
            android:background="@drawable/register_border" />
    </com.google.android.material.textfield.TextInputLayout>

    <Button
        android:id="@+id/btn_register"
        android:layout_width="160dp"
        android:layout_height="40dp"
        android:layout_below="@id/register_password_layout"
        android:layout_marginStart="130dp"
        android:layout_marginTop="24dp"
        android:background="@drawable/rounded_button"
        android:backgroundTint="#FDE54E"
        android:text="@string/register"
        android:textAlignment="center"
        android:textSize="18sp" />

    <TextView
        android:id="@+id/redirect_login"
        android:layout_width="wrap_content"
        android:layout_height="24dp"
        android:layout_marginStart="24dp"
        android:layout_marginTop="16dp"
        android:text="@string/redirect_login"
        android:textAlignment="center"
        android:textColor="@color/black"
        android:textSize="16sp"
        android:textColorLink="#FDE54E"
        android:layout_below="@id/btn_register"/>

</RelativeLayout>